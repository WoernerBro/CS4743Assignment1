<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label nodeOrientation="LEFT_TO_RIGHT" prefWidth="90.0" text="First Name" underline="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <TextField fx:id="textFieldAuthorFirstName" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label nodeOrientation="LEFT_TO_RIGHT" prefWidth="90.0" text="Last Name" underline="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <TextField fx:id="textFieldAuthorLastName" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label nodeOrientation="LEFT_TO_RIGHT" prefWidth="90.0" text="Date of Birth" underline="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <DatePicker fx:id="datePickerAuthorDOB" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding></DatePicker>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label nodeOrientation="LEFT_TO_RIGHT" prefWidth="90.0" text="Gender" underline="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <TextField fx:id="textFieldAuthorGender" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label nodeOrientation="LEFT_TO_RIGHT" prefWidth="90.0" text="Website" underline="true">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <TextField fx:id="textFieldAuthorWebsite" nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </HBox>
      <HBox>
         <children>
            <Button fx:id="buttonSaveAuthorDetail" mnemonicParsing="false" onAction="#saveAuthorDetail" text="Save">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="buttonViewAuditTrail" mnemonicParsing="false" onAction="#viewAuditTrail" text="View Audit Trail" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
